<p>this is the show all races template</p>
<!-- use data-id not just id-->
  <table class="table table-responsive" id='race-table'>
  <thead class="thead-default">
    <tr>
      <th colspan="1">Race Date</th>
      <th colspan="1">Location</th>
      <th colspan="1">Distance</th>
      <th colspan="1">Result</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
      {{#each races as |race|}}
      <tr>
        <td>{{race.race_day}}</td>
        <td>{{race.location}}</td>
        <td>{{race.distance}}</td>
        <td>{{race.time}}</td>
        <td>
          <button type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          </button>
        </td>
        <td>
          <button type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          </button>
        </td>
      </tr>
        {{/each}}

    </tbody>
</table>

<button type="button" style="float:right" class="btn btn-default add-race-btn">Add Race</button>
